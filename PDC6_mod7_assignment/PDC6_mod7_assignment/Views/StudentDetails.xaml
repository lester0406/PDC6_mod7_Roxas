<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC6_mod7_Roxas.Views.StudentDetails">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="StudentID" Text="{Binding StudentID}" IsReadOnly="True"/>
            <Entry x:Name="Name" Text="{Binding Name}"/>
            <Entry x:Name="Course" Text="{Binding Section}"/>
            <Entry x:Name="Yearlevel" Text="{Binding YearLevel}"/>
            <Entry x:Name="Section" Text="{Binding Course}"/>

           

            <Button Text="Update" Clicked ="BtnUpdate"/>
            <Button Text="Delete" Clicked ="BtnDelete"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>